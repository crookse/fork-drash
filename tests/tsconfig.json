{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "types": [
      "bun-types",
      "deno",
      "node",
      "jest"
    ],
    "baseUrl": ".",
    "paths": {
      // This is used in tandem with `jest.config.ts#moduleNameMapper`
